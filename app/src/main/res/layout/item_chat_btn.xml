<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_white_fill_25_rect"
        android:clickable="true"
        android:elevation="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/iv_item_chat_btn"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_line_10_rect"
            android:src="@drawable/ic_no_sign"
            app:layout_constraintBottom_toTopOf="@id/tv_item_chat_btn_name"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_chat_btn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textAppearance="@style/TextAppearance.Kiumee.cap1_regular_36"
            android:textColor="@color/gray_12"
            app:layout_constraintBottom_toTopOf="@id/tv_item_chat_btn_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_item_chat_btn"
            tools:text="상품명" />

        <TextView
            android:id="@+id/tv_item_chat_btn_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Kiumee.cap2_regular_32"
            android:textColor="@color/gray_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_chat_btn_name"
            tools:text="가격" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>